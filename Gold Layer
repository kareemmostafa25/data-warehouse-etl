 Top Selling Products
CREATE TABLE gold_top_products AS
SELECT p.product_name,
       SUM(f.sales_quantity) AS total_quantity,
       SUM(f.sales_amount)   AS total_sales
FROM silver_fact_sales f
JOIN silver_dim_product p 
     ON f.product_key = p.product_key
GROUP BY p.product_name
ORDER BY total_quantity DESC
LIMIT 10;

 Top Customers
CREATE TABLE gold_top_customers AS
SELECT c.customer_name,
       SUM(f.sales_amount)   AS total_spent,
       SUM(f.sales_quantity) AS total_items
FROM silver_fact_sales f
JOIN silver_dim_customer c 
     ON f.customer_key = c.customer_key
GROUP BY c.customer_name
ORDER BY total_spent DESC
LIMIT 10;

  Low Selling Products
CREATE TABLE gold_low_products AS
SELECT p.product_name,
       SUM(f.sales_quantity) AS total_quantity,
       SUM(f.sales_amount)   AS total_sales
FROM silver_fact_sales f
JOIN silver_dim_product p 
     ON f.product_key = p.product_key
GROUP BY p.product_name
ORDER BY total_quantity ASC
LIMIT 10;
